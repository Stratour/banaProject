[Unit]
Description=Bana Django App Gunicorn
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/home/rootkitbana/banaProject/bana
Environment="PATH=/home/rootkitbana/env/bin"
ExecStart=/home/rootkitbana/env/bin/gunicorn \
    --bind 127.0.0.1:9768 \
    --workers 3 \
    --user www-data \
    --group www-data \
    bana.wsgi:application
ExecReload=/bin/kill -s HUP $MAINPID
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target








server {
    listen 80;
    server_name bana.mobi www.bana.mobi;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name bana.mobi www.bana.mobi;
    
    # Certificats SSL (générés par certbot)
    ssl_certificate /etc/letsencrypt/live/bana.mobi/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/bana.mobi/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    
    # Headers de sécurité renforcés
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'" always;
    add_header Strict-Transport-Security "max-age=63072000" always;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml;
    
    # Root et index
    root /home/rootkitbana/banaProject/bana;
   # Taille max des uploads
    client_max_body_size 50M;
    
    # Fichiers statiques Django
    location /static/ {
        alias /home/rootkitbana/banaProject/bana/staticfiles/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Fichiers media Django
    location /media/ {
        alias /home/rootkitbana/banaProject/bana/media/;
        expires 1y;
        add_header Cache-Control "public";
        access_log off;
    }
    
    # Favicon et robots.txt
    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt { access_log off; log_not_found off; }
    
    # Bloquer l'accès aux fichiers sensibles
    location ~ /\. { deny all; access_log off; log_not_found off; }
    
    # Proxy vers Gunicorn sur le port 9768

# Proxy vers Gunicorn sur le port 9768
    location / {
        proxy_pass http://127.0.0.1:9768;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }
}








































